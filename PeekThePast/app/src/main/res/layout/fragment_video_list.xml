<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="ptp.peekthepast.VideoList">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#177c00"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_margin="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                android:scaleType="fitXY"
                android:text="Sorted by"
                android:id="@+id/textView2"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:textSize="22dp" />
            <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="22dp"

                android:id="@+id/spinner_sort"
                android:entries="@array/sorting_arrays"
            android:spinnerMode="dropdown">
            </Spinner>
        </GridLayout>


        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:background="#31352e"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="top|left">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#40973B">
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"
                        android:layout_margin="5dp"
                        android:background="#40973B"
                        android:paddingBottom="3dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:paddingTop="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/test_image" />
                    <GridLayout
                        android:background="#40973B"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <!-- Add infomation for Video here -->
                    </GridLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:background="#ffffff"
                    android:paddingBottom="50dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/test_image" />
                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:background="#ffffff"
                    android:paddingBottom="50dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/test_image" />
                <ImageView
                    android:id="@+id/imageVisadew1"
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/test_image" />

                <ImageView
                    android:id="@+id/imageVisdaew2"
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:padding="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/test_image" />

                <ImageView
                    android:id="@+id/imageViewsda3"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:paddingBottom="50dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/test_image" />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView3"
        android:layout_gravity="right|center_vertical" />

</FrameLayout>
