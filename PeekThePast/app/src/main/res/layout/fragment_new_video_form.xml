<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="ptp.peekthepast.NewVideoForm">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="The #titel of your moment:"
            android:id="@+id/textView3" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_moment_title"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="The moment will only be visible near this position:"
            android:id="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="... GPS is drinking some wine ..."
            android:id="@+id/text_gps_pos"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Erstellen"
            android:id="@+id/button_upload"
            android:layout_gravity="right"
            android:enabled="false"
            android:clickable="true" />

        <ProgressBar
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:id="@+id/upload_progressbar"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.12"
            android:visibility="invisible"
            android:indeterminate="false"
            android:max="100"
            android:progress="70" />

    </LinearLayout>

</FrameLayout>
